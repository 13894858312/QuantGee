<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="bean.TradeUser" table="TradeUser" schema="quantgee_data">
        <composite-id mapped="true" class="bean.TradeUserPK">
            <key-property name="userId">
                <column name="userID" sql-type="varchar(20)" length="20"/>
            </key-property>
            <key-property name="stockId">
                <column name="stockID" sql-type="varchar(10)" length="10"/>
            </key-property>
        </composite-id>
        <property name="currentHoldingNum">
            <column name="currentHoldingNum" sql-type="int(11)"/>
        </property>
        <property name="currentYield">
            <column name="currentYield" sql-type="double" precision="-1"/>
        </property>
    </class>
</hibernate-mapping>